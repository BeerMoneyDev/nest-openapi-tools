{
  "name": "nest-aws-serverless-tools",
  "version": "0.0.3",
  "description": "A collection of tools to make building and deploying AWS serverless Nest applications AWESOME.",
  "author": "Kerry Ritter <ritter@kerryritter.com> (http://www.kerryritter.com)",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "cli": "ts-node ./src/cli/cli initialize",
    "deploy": "ts-node ./cfn/deploy"
  },
  "bin": {
    "nest-aws-serverless-tools": "./bin/run"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^1.0.15-4.3.1",
    "archiver": "^4.0.2",
    "cfn-deploy": "^1.2.0",
    "cli-ux": "^5.4.9",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "yaml": "^1.10.0",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.3.2",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/testing": "^7.0.0",
    "@types/archiver": "^3.1.0",
    "@types/aws-lambda": "^8.10.59",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/express": "^4.17.7",
    "@types/jest": "25.2.3",
    "@types/node": "^13.9.1",
    "@types/rimraf": "^3.0.0",
    "@types/supertest": "^2.0.8",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "aws-lambda": "^1.0.6",
    "aws-serverless-express": "^3.3.8",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.4",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "aws-lambda": "^1.0.6",
    "aws-serverless-express": "^3.3.8",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.3.2",
    "@nestjs/swagger": "^4.5.12",
    "swagger-ui-express": "^4.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
